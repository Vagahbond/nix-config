

(defpoll speaker-volume :interval "1s"
                        :initial 100
  "./bar/bottom/sliders/get_speaker_volume.sh")



(defwidget sliders []
  (box :vexpand false :hexpand true :orientation "v"
    (scale :class 'volume-slider'
             :hexpand "true"
             :min 0
             :max 100
             :height 8
             :marks true
             :value speaker-volume
             :onchange "pamixer --set-volume {}")))


